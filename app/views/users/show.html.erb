<div class="container mt-5 mb-md-4 py-5">

<h1>Page Profil</h1>

<div class="card">
<div class="card-body">

<p>Bienvenue sur la page profil de <%= @user.username %></p>
<h3>Avatar actuel</h3>
<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar', width:"20%"%>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
  <%= render 'places/form', place: @place%>
<%end%>

<h4>Changer d'avatar ?</h4>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>

</div>
  </div>
  </br>

<h3> Voici la liste des chiens inscrits de <%= @user.username %> </h3>




<% @user.dogs.each do |dog|%></br>
  <div class="card">
  <div class="card-body">
<b> <%= dog.name %> </br> </b>
  Sa description : <%= dog.description %></br>
  Son genre : <%= dog.gender %></br>
  Sa date de naissance : <%= (dog.birth_date).strftime("%d/%m/%Y") %></br>

  </div>
  </div>
  
  <% end %>


</div>