<div class="col-md-6 px-4 pt-2 pb-4 px-sm-5 pb-sm-5 pt-md-5">

<h2> Inscris ton toutou </h2>


<%= form_for @dog, method: :post do |form| %>

<div class="mb-4">
<%= form.label :nom %><br/>
<input class="form-control" type="name" placeholder="Entrez son nom" required="" <%= form.text_field :name, autofocus: true %>
</div>

<div class="mb-4">

<%= form.label :male_ou_femelle %><br/>
<select class="form-control" <%= form.select :gender, Dog::genders.keys %>
</div>

<div class="mb-4">
<%= form.label :date_de_naissance %><br/>
<input class="form-control" placeholder="date de naissance" required="" <%= form.date_field :birth_date %>
</div>

<div class="mb-4">
<%= form.label :description %><br/>
<input class="form-control" type="text" placeholder="Sa description" required="" <%= form.text_area :description, autofocus: true %>
</div>

<div class="mb-4">
<%= form.label :race %><br/>
<select class="form-control"<%= form.select :breed, Dog::breeds.keys %>
</div>

<div class="mb-4">
<%= form.label :Pelage%><br/>
<select class="form-control"<%= form.select :color, Dog.colors.keys %>
</div>

<div class="mb-4">
<%= form.label :LOF %><br/>
<select class="form-control"<%= form.select :lof, Dog::lofs.keys %>
</div>

<div class="mb-4">
<%= form.label :vaccine %><br/>
<select class="form-control"<%= form.select :vaccine, Dog::vaccines.keys %>
</div>


<div class="mb-4">
<%= form.label :récompensé%><br/>
<select class="form-control"<%= form.select :reward, Dog::rewards.keys %>
</div>



<%= form.file_field :pictures, multiple: true %><br>
</br>

<div class="actions">
<button class="btn btn-primary btn-lg rounded-pill w-100" type="submit"><%= "Inscrire mon chien" %></button>
</div>

<% end %>

</div>