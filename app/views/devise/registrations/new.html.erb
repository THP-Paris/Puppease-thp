<body class="text-center">
<main class="form-signin w-30 m-auto">
<%= image_tag("icons/favicon.png", width: '100', height: '100', class: 'my-4')%>

<h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'py-3' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :mot_de_passe, class: 'py-3' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :confirmation_du_mot_de_passe, class: 'py-3' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions py-4">
    <%= f.submit "Je m'inscris", class: 'btn btn-primary btn-lg rounded-pill w-100' %>
  </div>
<% end %>

<%= render "devise/shared/links", class: 'pb-6' %>
</main>
</body>