<!-- form sign in -->
<body class="text-center">
<main class="form-signin w-30 m-auto">
<%= image_tag("icons/favicon.png", width: '100', height: '100', class: 'my-4')%>
<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'py-3' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :mot_de_passe, class: 'py-3' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi, class: 'py-3' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Je me connecte", class: 'btn btn-primary btn-lg rounded-pill w-100' %>
  </div>
<% end %>
  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</main>
</body>
